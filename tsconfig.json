{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "outDir": "./dist",
        "strict": true
    },
    "include": ["./src/**/*.ts"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}
